pipeline{
  agent any
  tools {
    maven 'maven'
  }
  stages {
    stage ("initialize") {
      steps {
        sh ''' 
                echo "PATH = ${PATH}
                echo "M2_HOME = ${M2_HOME}
           '''
      }
    }
    stage("build"){
      steps{
        dir('devsecops_pipeline/webapp-master') {
           // Run Maven clean and package commands
           sh 'mvn clean package'
        }
      }
    }
  }
}
